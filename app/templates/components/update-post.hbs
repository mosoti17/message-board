{{#if updatePostForm}}
<h3>Update</h3>
<div>
  <form>
    <div class="form-group">
      <label for="question">question</label>
      {{input value=question id="question" placeholder=post.question}}
    </div>
    <div class="form-group">
      <label for="notes">Additional notes</label>
      {{input value=notes id="notes" placeholder=post.notes}}
    </div>
    <div class="form-group">
      <label for="author">author</label>
      {{input value=author id="author" placeholder=post.author}}
    </div>
    <button {{action 'update' post}}>Save</button>
  </form>

</div>
{{else}}
<button {{action 'updatePostForm'}}>Update Question</button>
{{/if}}
