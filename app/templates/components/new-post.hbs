
{{#if addNewPost}}
<h3>Ask a Question</h3>
<div>
  <form>
    <div class="form-group " >
      <label for="question">Question</label><br>
      {{textarea rows="7" cols="35"  class="form-control" value=question type="text" id="question" }}
    </div>
    <div class="form-group">
      <label for="notes">Additional notes</label><br>
      {{textarea rows="2" cols="35" class="form-control" value=notes id="notes"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label><br>
      {{textarea rows="1" cols="35" class="form-control" value=author id="author"}}
    </div>
    <button id="savepost"{{action 'savePost'}}>Post Question</button>
  </form>

</div>
{{else}}
<button id="new-post"class="btn btn-secondary pull-right"{{action 'postFormShow'}}>Add Question</button>
{{/if}}
