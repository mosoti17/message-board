
{{#if addNewPost}}
<h3>Question</h3>
<div>
  <form>
    <div class="form-group " >
      <label for="question">Question</label><br>
      <textarea rows="7" cols="35">{{input value=question type="text" id="question" }}</textarea>
    </div>
    <div class="form-group">
      <label for="notes">Additional notes</label><br>
      <textarea rows="2" cols="35">{{input value=notes id="notes"}}</textarea>
    </div>
    <div class="form-group">
      <label for="author">author</label><br>
      {{input value=author id="Author"}}
    </div>
    <button id="savepost"{{action 'savePost'}}>Post Question</button>
  </form>

</div>
{{else}}
<button id="new-post"class="btn btn-secondary pull-right"{{action 'postFormShow'}}>Add Question</button>
{{/if}}
